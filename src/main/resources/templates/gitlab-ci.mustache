stages:
{{#config.stages}}  - {{.}}
{{/config.stages}}

variables:
  MAVEN_OPTS: "-Dmaven.repo.local=.m2/repository"

cache:
  paths:
    - .m2/repository/
    - target/

build-job:
  stage: build
  image: maven:{{config.jdkVersion}}-eclipse-temurin
  script:
    - mvn -B package

{{#config.dockerImage}}
docker-build:
  stage: deploy
  only:
    - {{config.mainBranch}}
  image: docker:20.10
  services:
    - docker:20.10-dind
  variables:
    DOCKER_TLS_CERTDIR: "/certs"
  script:
    - docker build -t {{.}}:$CI_COMMIT_SHA .
    - echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin
    - docker push {{.}}:$CI_COMMIT_SHA
{{/config.dockerImage}}